{{form_start(form)}}
{{form_widget(form)}}
    <a type="button" class="btn btn-lg btn-danger btn-block" onclick="confirmDelete()"><i class="glyphicon glyphicon-trash"></i> Eliminar</a>
{{form_end(form)}}

<script>
    var message = '{{ message }}';
    
    function confirmDelete()
    {
        bootbox.confirm(message, function(result){
            
            if(result == true)
            {
                document.form.submit();
            }
        });
    }
    
</script>