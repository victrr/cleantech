{%extends 'layout.html.twig'%}
     
{% block body %}
<div class="container">
    <a href="{{path('cleantech_directorio_index')}}">regresar al inicio</a>
    <br >
    <a href="{{path('cleantech_directorio_prueba')}}">Vista de imagen</a>
    <br >
    <a href="{{path('cleantech_directorio_pruebadirectorio')}}">prueba directorio</a>
    <div class="row">
        {{ form_start(form, { 'attr' : {'novalidate' : 'novalidate', 'role' : 'form', 'class' : 'form-horizontal'} }) }}
					<div class="form-group">
						<div class="col-sm-2 control-label">
							{{form_label(form.name) }}
						</div>
						<div class="col-sm-8">
							{{form_widget(form.name, {'attr' : {'class' : 'form-control', 'placeholder' : 'nombre de imagen'} }) }}
							
						</div>
				  </div>
				  
				  <div class="form-group">
						<div class="col-sm-2 control-label">
							{{form_label(form.file) }}
						</div>
						<div class="col-sm-8">
							{{form_widget(form.file, {'attr' : {'class' : 'file-input'} }) }}
							
						</div>
					
				  </div>
					<div class="form-group" >
						<div class="col-sm-offset-2 col-sm-10">
							{{form_widget(form.save, {'label' : 'guardar', 'attr' : {'class' : 'btn btn-primary'} }) }}
						</div>
					</div>
										  			
				{{ form_end(form) }}
    </div
    
</div>
<div class="container">
	
	<input type="file" id="files" name="files[]" />
	<br />
	<output id="list"></output>
	
	
</div>

 <input class="file-input" type="file" />
   <br />
   <img id="imgSalida" width="25%" height="25%" src="" />
{% endblock %}