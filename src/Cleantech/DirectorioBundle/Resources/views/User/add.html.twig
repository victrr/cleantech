	</div>
    {{ parent()}}

    <div class="page-content">
    	<div class="row">
            <div class="col-md-2">
    		  	<div class="sidebar content-box" style="display: block;">
    		  	    <div class="thumbnail">
                         <img src="{{asset('public/pictures/cleantechChallenge.png')}}" alt="..." class="img-rounded">
                    </div>
                    <!--<h3>{#{app.session.get('firstName')}#}</h3>--->
                    <ul class="nav">
                        <!-- Main menu -->
                        <li>
                            <a href="{{path('cleantech_directorio_perfil')}}">
                                <i class="glyphicon glyphicon-home"></i> Inicio
                                <span class="pull-right"></span>
                             </a>
                        </li>
                        <li class="submenu actives">
                            <a href="#">
                                <i class="glyphicon glyphicon-user"></i> Usuarios
                                <span class="caret pull-right"></span>
                            </a>
                             <!--- Sub menu--->
                            <ul>
                                <li><a href="{{path('cleantech_user_usuarios')}}"><i class="glyphicon glyphicon-list-alt"></i> Usuarios</a></li>
                                <li><a href="{{path('cleantech_user_add')}}"><i class="glyphicon glyphicon-plus"></i> Añadir Usuario</a></li>
                            </ul>
                        </li>
                        
                        <li class="submenu">
                            <a href="#">
                                <i class="glyphicon glyphicon-leaf"></i> Empresas
                                <span class="caret pull-right"></span>
                            </a>
                             <!--- Sub menu--->
                            <ul>
                                <li><a href="{{path('cleantech_empresa_empresas')}}"><i class="glyphicon glyphicon-list-alt"></i> Empresas</a></li>
                                <li><a href="{{path('cleantech_empresa_add')}}"><i class="glyphicon glyphicon-plus"></i> Añadir Empresa</a></li>
                            </ul>
                        </li>
                        
                        <li class="submenu">
                            <a href="#">
                                <i class="glyphicon glyphicon-envelope"></i> Avisos
                                <span class="caret pull-right"></span>
                            </a>
                             <!--- Sub menu--->
                            <ul>
                                <li><a href="{{path('cleantech_mensaje_mensajes')}}"><i class="glyphicon glyphicon-list-alt"></i> Avisos</a></li>
                                <li><a href="{{path('cleantech_mensaje_add')}}"><i class="glyphicon glyphicon-plus"></i> Añadir Aviso</a></li>
                            </ul>
                        </li>
                        
                    </ul>
                </div>
            </div>
		  	<div class="col-md-10">
		  		<div class="row">
					<div class="col-md-12">
						<div class="content-box-large">
			  				<!--<div class="panel-heading">
								<div class="panel-title "><h1><span class="label label-primary">Usuarios</span></h1></div>
							</div>
		  					--->
		  					<div class="panel-body">
		  						<div id="rootwizard">
									<div class="navbar">
										<div class="navbar-inner">
											<ol class="breadcrumb">
												<li><a href="{{path('cleantech_directorio_perfil')}}">Inicio</a></li>
												<li class="active">Añadir Usuario</li>
											</ol>										
										 </div>
									</div>
									<div class="tab-content">
										{%for flashMessage in app.session.flashbag.get('success') %}
						                    <div class="alert alert-success" role="alert">
						                    	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
						                        <div class="container"> {{flashMessage}}</div>
						                    </div>
						                {% endfor %}
								    	<div class="tab-pane active">
								    		<div class="panel-heading">
												<div class="panel-title"><i class="glyphicon glyphicon-pencil"></i> <strong> Añadir usuario: </strong></div>
											</div>
											<div class="panel-body">
								      			{{ form_start(form, { 'attr' : {'novalidate' : 'novalidate', 'role' : 'form', 'class' : 'form-horizontal'} }) }}
										  
										  		
											  
												  	<div class="form-group">
												  		<div class="col-sm-2 control-label">
												    		{{form_label(form.firstName) }}
												    	</div>
												    	<div class="col-sm-8">
												    		{{form_widget(form.firstName, {'attr' : {'class' : 'form-control', 'placeholder' : 'nombre'} }) }}
												    		<span class="text-danger">{{ form_errors(form.firstName) }}</span>
												    	</div>
												    	
												  	</div>
											  
											  		<div class="form-group">
											  			<div class="col-sm-2 control-label">
											  				{{form_label(form.lastName) }}
											  			</div>
											    		<div class="col-sm-8">
											    			{{form_widget(form.lastName, {'attr' : {'class' : 'form-control', 'placeholder' : 'apellidos'} }) }}
											    			<span class="text-danger">{{ form_errors(form.lastName) }}</span>
											    		</div>
											  		</div>
											  
													<div class="form-group">
												  		<div class="col-sm-2 control-label">
												    		{{form_label(form.email) }}
												    	</div>
												    	<div class="col-sm-8">
												    		{{form_widget(form.email, {'attr' : {'class' : 'form-control', 'placeholder' : 'e-mail'} }) }}
												    		<span class="text-danger">{{ form_errors(form.email) }}</span>
												    	</div>
												  	</div>
											  
											  		<div class="form-group">
											  			<div class="col-sm-2 control-label">
												    		{{form_label(form.password) }}
												    	</div>
												    	<div class="col-sm-8">
												    		{{form_widget(form.password, {'attr' : {'class' : 'form-control', 'type' : 'password', 'placeholder' : 'contraseña' } }) }}
												    		<span class="text-danger">{{ form_errors(form.password) }}</span>
												    	</div>
												  	</div>
											  
											  		<div class="form-group">
											  			<div class="col-sm-2 control-label">
											    			{{form_label(form.role) }}
											    		</div>
											    		<div class="col-sm-8">
											    			{{form_widget(form.role, {'attr' : {'class' : 'form-control'} }) }}
											    			<span class="text-danger">{{ form_errors(form.role) }}</span>
											    		</div>
											  		</div>
											  
												  	<div class="form-group">
												  		<div class="col-sm-offset-2 col-sm-10">
															<div class="checkbox">
														  		<div class="col-sm-10">
														    		{{form_widget(form.isActive, {'attr' : {'checked' : 'checked'} } ) }}{% trans %}Active{%endtrans%}
														    		<span class="text-danger">{{ form_errors(form.isActive) }}</span>
														    	</div>
														  	</div>
														</div>
												  	</div>		
											 
											 		
											 	
											  		<div class="form-group" >
											  			<div class="col-sm-offset-2 col-sm-10">
											  				{{form_widget(form.save, {'label' : 'Crear ', 'attr' : {'class' : 'btn btn-primary'} }) }}
											  			</div>
											  		</div>
												{{ form_end(form) }}
											</div>
								    	</div>
									</div>	
								</div>
		  					</div>
		  				</div>
					</div>
				</div>
		  	</div>
		</div>
    </div>

    <footer>
        <div class="container">
            <div class="copy text-center">
               CLEANTECH CHALLENGUE <a href='#'>Website</a>
            </div>
        </div>
    </footer>

{% endblock %}