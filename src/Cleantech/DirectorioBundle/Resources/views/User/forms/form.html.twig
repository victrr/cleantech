{{form_start(form, {'attr': {'id' : id|default('form')} })}}
{{form_widget(form)}}

    {% if with_submit is not defined or with_submit == true %}
    <a type="button" class="btn btn-lg btn-danger btn-block" onclick="confirmDelete()"><i class="glyphicon glyphicon-trash"></i> Eliminar</a>
    {% endif %}
{{form_end(form)}}

<script>
    var message = '{{ message }}';
    
    function confirmDelete()
    {
        bootbox.confirm(message, function(result){
            
            if(result == true)
            {
                document.form.submit();
            }
        });
    }
    
</script>